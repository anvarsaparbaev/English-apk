<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="344dp"
                android:minWidth="344dp"
                android:layout_gravity="center|top"
                android:layout_height="148dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/titleEnglishUzbek"
                        android:layout_width="216dp"
                        android:layout_height="40dp"
                        android:textColor="@color/black"
                        android:gravity="bottom"
                        android:text="Ingliz-Uzbek"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tv_infoEU"
                        android:layout_width="216dp"
                        android:layout_height="56dp"
                        android:text="Words of all Units!"
                        app:layout_constraintStart_toStartOf="@id/titleEnglishUzbek"
                        android:gravity="center|start"
                        android:textSize="17sp"
                        app:layout_constraintTop_toBottomOf="@id/titleEnglishUzbek"
                        />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:layout_constraintStart_toEndOf="@id/titleEnglishUzbek"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/english_uzbek"/>
                    <Button
                        android:id="@+id/btn_learnEU"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_infoEU"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginVertical="8dp"
                        android:layout_marginStart="16dp"
                        android:text="Learn"/>
                    <Button
                        android:id="@+id/btn_gameEU"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Game"
                        app:layout_constraintTop_toTopOf="@id/btn_learnEU"
                        app:layout_constraintStart_toEndOf="@id/btn_learnEU"
                        android:layout_marginStart="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="344dp"
                android:minWidth="344dp"
                android:layout_gravity="center|top"
                android:layout_height="148dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/titleUzbekEnglish"
                        android:layout_width="216dp"
                        android:layout_height="40dp"
                        android:gravity="bottom"
                        android:text="Uzbek-Ingliz"
                        android:textColor="@color/black"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tv_infoUE"
                        android:layout_width="216dp"
                        android:layout_height="56dp"
                        android:text="Ha'r bir unitga tegishli so'zlar"
                        app:layout_constraintStart_toStartOf="@id/titleUzbekEnglish"
                        android:gravity="center|start"
                        android:textSize="17sp"
                        app:layout_constraintTop_toBottomOf="@id/titleUzbekEnglish"
                        />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:layout_constraintStart_toEndOf="@id/titleUzbekEnglish"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/english_uzbek"/>
                    <Button
                        android:id="@+id/btn_learnUE"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_infoUE"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginVertical="8dp"
                        android:layout_marginStart="16dp"
                        android:text="Learn"/>
                    <Button
                        android:id="@+id/btn_gameUE"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Game"
                        app:layout_constraintTop_toTopOf="@id/btn_learnUE"
                        app:layout_constraintStart_toEndOf="@id/btn_learnUE"
                        android:layout_marginStart="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="344dp"
                android:minWidth="344dp"
                android:layout_gravity="center|top"
                android:layout_height="148dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/allwords"
                        android:layout_width="216dp"
                        android:layout_height="40dp"
                        android:gravity="bottom"
                        android:text="Dictionary"
                        android:textColor="@color/black"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tv_infoAllwords"
                        android:layout_width="216dp"
                        android:layout_height="56dp"
                        android:text="This dictionary use for pre-intermediate degree's word"
                        app:layout_constraintStart_toStartOf="@id/allwords"
                        android:gravity="center|start"
                        android:textSize="17sp"
                        app:layout_constraintTop_toBottomOf="@id/allwords"
                        />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:layout_constraintStart_toEndOf="@id/allwords"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/dictionary"/>
                    <Button
                        android:id="@+id/btn_learnAllWords"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_infoAllwords"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginVertical="8dp"
                        android:layout_marginStart="16dp"
                        android:text="Learn"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="344dp"
                android:minWidth="344dp"
                android:layout_gravity="center|top"
                android:layout_height="148dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/shortStories"
                        android:layout_width="216dp"
                        android:layout_height="40dp"
                        android:gravity="bottom"
                        android:text="Short Stories"
                        android:textColor="@color/black"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tv_infoShortStories"
                        android:layout_width="216dp"
                        android:layout_height="56dp"
                        android:text="These short stories used phrasal verbs"
                        app:layout_constraintStart_toStartOf="@id/shortStories"
                        android:gravity="center|start"
                        android:textSize="17sp"
                        app:layout_constraintTop_toBottomOf="@id/shortStories"
                        />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:layout_constraintStart_toEndOf="@id/shortStories"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/shortstory"/>
                    <Button
                        android:id="@+id/btn_startShortStroies"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_infoShortStories"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginVertical="8dp"
                        android:layout_marginStart="16dp"
                        android:text="start"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>